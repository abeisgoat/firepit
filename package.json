{
  "name": "firepit",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "fmt": "prettier --write *.js",
    "pkg": "pkg -c package.json firepit.js --out-path dist/ && chmod +x dist/firepit-*",
    "ship": "gsutil -m cp dist/* gs://fir-tools-builds/firepit/ && gsutil iam ch allUsers:objectViewer gs://fir-tools-builds",
    "uninstall": "rm -rf ~/.cache/firebase"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chalk": "^2.4.2",
    "shelljs": "^0.8.3",
    "user-home": "^2.0.0"
  },
  "pkg": {
    "scripts": [
      "node_modules/npm/src/**/*.js"
    ],
    "assets": [
      "tools/**/*",
      "node_modules/.bin/**/*",
      "node_modules/yarn/**/*",
      "node_modules/npm/bin/**/*",
      "node_modules/npm/node_modules/node-gyp/**/*"
    ]
  },
  "devDependencies": {
    "prettier": "^1.15.3"
  }
}
